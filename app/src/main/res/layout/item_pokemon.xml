<?xml version="1.0" encoding="utf-8"?>
<!-- item_pokemon.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Fondo estilo Pokeball con división vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Mitad Roja -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DC0A2D"/>

            <!-- Mitad Blanca -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"/>

        </LinearLayout>

        <!-- Línea divisoria VERTICAL negra -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#000000"/>

        <!-- Círculo central de la Pokeball -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/pokeball_circle"/>

        <!-- Contenido sobre el fondo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Imagen del Pokémon con contorno blanco -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <!-- Fondo blanco circular para contorno -->
                <View
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/pokemon_circle_background"/>

                <!-- Imagen del Pokémon -->
                <ImageView
                    android:id="@+id/ivPokemon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="Pokemon Image"
                    android:elevation="4dp"/>

            </FrameLayout>

            <!-- Información del Pokémon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:elevation="4dp">

                <!-- Número del Pokémon -->
                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#001"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <!-- Nombre del Pokémon -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bulbasaur"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>

                <!-- Tipos del Pokémon -->
                <TextView
                    android:id="@+id/tvTypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grass • Poison"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Flecha -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:rotation="270"
                android:tint="#666666"
                android:contentDescription="Ver detalles"
                android:elevation="4dp"/>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>